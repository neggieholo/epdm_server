doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title EPDM LTD
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/style.css")
  body
    #overall-div
      .top-section
        .b-img
          .header-container.p-3
            .logo-area.text-start
              .d-flex.align-items-center#hk
                img.img-fluid.mx-2#headerlogo(src="https://raw.githubusercontent.com/Dragsvillestar/new-git/refs/heads/master/IMG-20250125-WA0011%20(1).jpg", alt="Company Logo")
                .d-flex.flex-column
                  h1.mb-0.fw-bold ENERGY PROJECTS DATA MEDIA LTD.
                  p.p-2.rounded#logocaption
                    i your reliable and realtime energy projects data marketplace
      nav.navbar.navbar-expand-lg.bg-dark.navbar-dark.pb-2#topnav
        .container
          div.d-flex.align-items-center
            button.navbar-toggler(type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas")
              span.navbar-toggler-icon
            #searchContainer.d-flex.align-items-center.ms-3
              label(for="searchCategory") Search by:
              select#searchCategory.ms-2
                option(value="Project ID") Project ID
                option(value="project name") Project Name
                option(value="client") Client
                option(value="location") Location
                option(value="main Contractor") Main Contractor
              .input-group.ms-2
                input#searchInput.form-control(type="text", placeholder="Enter search term...")
                button#searchButton.btn.btn-primary(type="button")
                  i.bi.bi-arrow-right                                               
          .collapse.navbar-collapse#navmenu
            ul.navbar-nav.ms-auto
              li.nav-item.dropdown.mx-3.fw-bold.topnavItem
                a.nav-link.dropdown-toggle.f-2(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false") ⚙️ Settings
                ul.dropdown-menu
                  li
                    a.dropdown-item#profile(href="#") Profile
                  li
                    a.dropdown-item(href="#") Manage Account
                  li
                    a.dropdown-item#logOut(href="#") Log Out
              li.nav-item.fw-bold.topnavItem
                a.nav-link.mx-3#helpButton(href="#") ❓ Help
                a.nav-link.mx-3#subscribeButton(href="#") Subscribe 
      #bottom-section
        .sideBar
          .navbar.d-flex.justify-content-center#navbar-div2
            ul.navbar-nav.text-center.flex-column.p-2
              li.nav-item.menu
                a.nav-link(href="/home") Home
              li.nav-item.menu.dropdown
                a.nav-link.dropdown-toggle#projectsmenu(href="#", data-bs-toggle="dropdown") Projects
                div.dropdown-menu
                  a.dropdown-item#favoritesProjects.favouritesBtn(href="#") Favorites
                  a.dropdown-item#newsletterProjects.newsletterBtn(href="#") Newsletter
              li.nav-item.menu
                a.nav-link(href="#") News
              li.nav-item.menu
                a.nav-link(href="#") Subscriptions
        div.offcanvas.offcanvas-start.d-sm-none(tabindex="-1" id="offcanvas" data-bs-backdrop="false")
          div.offcanvas-header
          div.offcanvas-body
            div.navbar.d-flex.justify-content-center(id="navbar-div2")
              ul.navbar-nav.text-center.flex-column.p-2
                li.nav-item
                  a.nav-link(href="/home") Home
                li.nav-item.menu.dropdown
                  a.nav-link.dropdown-toggle#offProjectsmenu(href="#", data-bs-toggle="dropdown") Projects
                  div.dropdown-menu
                   a.dropdown-item#offFavoritesProjects.favouritesBtn(href="#") Favorites
                   a.dropdown-item#offNewsletterBtn(href="#") Newsletter                
                li.nav-item
                  a.nav-link(href="") News
                li.nav-item
                  a.nav-link(href="") Subscriptions                
                li.nav-item.dropdown.mx-3.fw-bold.topnavItem
                  a.nav-link.dropdown-toggle.f-2(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false") ⚙️ Settings
                  ul.dropdown-menu.offDropdown-menu
                    li
                      a.dropdown-item#offProfile(href="#") Profile
                    li
                      a.dropdown-item(href="#") Manage Account
                    li
                      a.dropdown-item#offLogOut(href="#" ) Log Out
                li.nav-item.fw-bold.topnavItem
                  a.nav-link#offHelpButton(href="#") ❓ Help
                li.nav-item.fw-bold.topnavItem
                  a.nav-link#offSubscribeButton(href="#") Subscribe
        .projects.p-2
          h2#welcomeMsg Welcome, #{username}
          .content-div.p-3
          #bottom-spacer.p-2.mb-1
            p
              | Visits Today: 
              span#visitsToday 0
            p
              | Total Visits: 
              span#totalVisits 0
    script(src="/socket.io/socket.io.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
    script(src="./homepage.js")